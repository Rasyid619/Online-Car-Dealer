<%- include('../layouts/header') %>
  <%- include('../layouts/navbar') %>

<div class="container text-center">  
<h1 style="color: red;">Out of Stock</h1><br>

<br>
</div>
    <div class="container">
      <div class="d-flex flex-wrap bd-highlight gap-5">
        <% car.forEach(car => { %>
        <div class="card" style="width: 18rem ;">
          <img src="<%= car.imageUrl %> " class="card-img-top hj" alt="profile_pp">
          <div class="card-body">
            <h5 class="card-title text-center"><%=car.name%></h5>
            <p class="card-text text-center" ><%= car.condition %></p>
            <p class="card-text text-center" ><%= car.price %></p>
            <p class="card-text text-center" ><%= car.Category.name %></p>
            <p class="card-text text-center" ><%= car.stock %></p>
            <div class="d-grid gap-2">
              <a class="btn btn-success" href="/cars/empty/<%= car.id %>/restock">Restock</a>
    
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
   
   <%- include('../layouts/footer') %>