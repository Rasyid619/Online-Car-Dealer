<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Employee App</title>
  </head>
  <body>
    <div class="container">
      <h1>Employee App</h1>
      <br>
      <div class="container">
        <a class="btn btn-dark" href="/" role="button">Home</a>
      </div>
      <br>
      <div class="container">
        <a class="btn btn-success" href="/employees/add" role="button">Add Employee</a>
      </div>
      <div class="container">
        <br>
        <p>Sort by:</p>
        <a class="btn btn-info" href="/?sort=name" role="sumbit">name</a>  <a class="btn btn-info" href="/?sort=position" role="button">position</a> 
      </div>
      <br>
      <div class="container">
        <form method="GET">
          <select class="form-select" name="filter">
            <option selected>Filter by Degree</option>
            <option value="Bachelor Degree">Bachelor Degree</option>
            <option value="Master Degree">Master Degree</option>
          </select>
          <button class="btn btn-outline-secondary" role="submit">Filter</button>
        </form>
      </div>
      <br><br>
      <div class="d-flex flex-wrap bd-highlight gap-5">
        <% employee.forEach(employee => { %>
        <div class="card" style="width: 18rem;">
          <img src="<%= employee.profile_picture %> " class="card-img-top" alt="profile_pp">
          <div class="card-body">
            <h5 class="card-title text-center"><%= employee.name %> (<%= employee.age %>)</h5>
            <p class="card-text text-center" ><%= employee.position %> </p>
            <p class="card-text text-center" >(<%= employee.education %>)</p>
            <br><br><br>
            <p class="card-text" >Contact:</p>
            <p class="card-text" ><%= employee.email %></p>
            <p class="card-text" ><%= employee.phone_number %></p>
            <a href="/employees/edit/<%= employee.id %>" class="btn btn-warning">edit</a>
            <a href="/employees/delete/<%= employee.id %>" class="btn btn-danger">delete</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div> 

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
  </body>
</html>